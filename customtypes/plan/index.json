{
  "id": "plan",
  "label": "Plan",
  "format": "custom",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "name": {
        "type": "Text",
        "config": {
          "label": "Plan Name",
          "placeholder": "Discovery"
        }
      },
      "description": {
        "type": "Text",
        "config": {
          "label": "Description"
        }
      },
      "price": {
        "type": "Number",
        "config": {
          "label": "Price"
        }
      },
      "savings": {
        "type": "Text",
        "config": {
          "label": "Savings",
          "placeholder": "$25"
        }
      },
      "duration": {
        "type": "Text",
        "config": {
          "label": "Duration",
          "placeholder": "3 Months"
        }
      },
      "featured": {
        "type": "Boolean",
        "config": {
          "label": "Featured",
          "default_value": false,
          "placeholder_true": "Yes",
          "placeholder_false": "No"
        }
      },
      "features": {
        "type": "Group",
        "config": {
          "label": "Features",
          "fields": {
            "feature_text": {
              "type": "Text",
              "config": {
                "label": "Feature Text"
              }
            }
          }
        }
      },
      "sort_order": {
        "type": "Number",
        "config": {
          "label": "Sort Order"
        }
      }
    }
